        func onclick () { 
          if (Clen.osoba=='osoba') { 
            Clen.jmeno= trim(split(Clen.prijmeni,' ',0)); Clen.jmeno.change(); 
            Clen.prijmeni= trim(split(Clen.prijmeni,' ',1)); Clen.prijmeni.change(); 
