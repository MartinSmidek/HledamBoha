    if (form.same()) {
      warning('nebyla provedena žádná změna'); 
      state= 0;
    }
    else {
      if (castka.changed()) {
        castka= replace(castka,',','.'); 
        castka.change();
      }
      kdo= sys('user','id_user'); kdo.change(); 
      kdy= now_sql(1); kdy.change();
      if (form.key()) {
        if ( form.save() ) {
          state= 1;
          form.load(); 
        }
      }
      else {
