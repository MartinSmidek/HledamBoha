          sel= split(sel,',');
          if ( array_length(sel)==2 ) {
            idc= Duplicita.Spoj(sel[0],sel[1]); 
            if ( idc ) cleni.browse_refresh(idc);
          }
          else 
            warning(`Vyber právě 2 kontakty - je jich vybráno ${array_length(sel)}`)
          }
      }
